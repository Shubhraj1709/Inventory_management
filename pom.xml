            <artifactId>mysql-connector-j</artifactId>
            <scope>runtime</scope>
        </dependency>
<dependency>
    <groupId>com.itextpdf</groupId>
    <artifactId>itext7-core</artifactId>
    <version>9.1.0</version>
    <type>pom</type>
</dependency>
        <dependency>
            <groupId>com.razorpay</groupId>
